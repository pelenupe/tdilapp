{
    "name": "tdil-platform",
    "version": "1.0.0",
    "description": "tDIL Career Platform - Production Ready",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "build": "echo 'Using pre-built React files from tdil-frontend/dist'",
        "postinstall": "npm uninstall sqlite3 --save --no-warnings 2>/dev/null || true",
        "migrate": "node scripts/migrate.js",
        "seed": "node scripts/seed.js"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "author": "tDIL Team",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-rate-limit": "^8.0.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.0",
        "morgan": "^1.10.1",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "pg": "^8.10.0",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.32.1",
        "socket.io": "^4.7.2"
    },
    "devDependencies": {
        "nodemon": "^3.1.10"
    },
    "optionalDependencies": {},
    "config": {
        "database": {
            "dialect": "postgres",
            "dialectOptions": {
                "ssl": {
                    "require": true,
                    "rejectUnauthorized": false
                }
            }
        }
    }
}
