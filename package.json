{
    "name": "tdil-backend",
    "version": "1.0.0",
    "description": "tDIL Career Platform Backend",
    "main": "server.js",
    "scripts": {
        "start": "NODE_ENV=production node server.js",
        "dev": "nodemon server.js",
        "build": "echo 'Backend build complete - no frontend build needed'",
        "build:frontend": "cd tdil-frontend && npm run build",
        "build:full": "npm install && cd tdil-frontend && npm install && npm run build",
        "migrate": "node scripts/migrate.js",
        "seed": "node scripts/seed.js",
        "docker:build": "docker build -t tdil-app .",
        "docker:run": "docker run -p 5001:5001 --env-file .env tdil-app",
        "health": "curl http://localhost:5001/health"
    },
    "author": "tDIL Team",
    "license": "MIT",
    "dependencies": {
        "aws-sdk": "^2.1692.0",
        "bcrypt": "^5.1.0",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-rate-limit": "^8.0.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.0",
        "morgan": "^1.10.1",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.10.0",
        "sequelize": "^6.32.1",
        "socket.io": "^4.7.2",
        "sqlite3": "^5.1.7",
        "vite": "^7.0.6"
    },
    "devDependencies": {
        "nodemon": "^2.0.22"
    }
}
